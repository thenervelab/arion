# Chain submitter configuration (example)
#
# Copy to `chain-submitter/.env` (or export in systemd) and fill secrets.

# Substrate WS endpoint (required)
CHAIN_WS_URL=<wss://your-node>

# Validator HTTP endpoint (where to pull map + stats)
VALIDATOR_HTTP_URL=http://127.0.0.1:3002

# Validator admin API key (used when /network-stats is protected)
VALIDATOR_ADMIN_API_KEY=<set-a-strong-random-secret>

# Mnemonic/seed phrase for the whitelisted submitter account (KEEP SECRET)
SUBMITTER_MNEMONIC="<YOUR_MNEMONIC_HERE>"

# Optional: override pallet name if auto-detect fails (leave empty to auto-detect)
ARION_PALLET_NAME=

# Loop / bucket configuration
SUBMITTER_POLL_SECS=6
SUBMITTER_BUCKET_BLOCKS=300
SUBMITTER_UPTIME_OFFLINE_SECS=120

# Enable/disable what gets submitted
SUBMITTER_ENABLE_CRUSH_MAP=true
SUBMITTER_ENABLE_MINER_STATS=true
SUBMITTER_ENABLE_NODE_QUALITY=true

# Safety: truncate endpoint/http bytes to these limits (must be <= runtime MaxEndpointLen/MaxHttpAddrLen)
SUBMITTER_MAX_ENDPOINT_BYTES=256
SUBMITTER_MAX_HTTP_ADDR_BYTES=128

# ============================================================================
# Attestation submission (warden integration)
# ============================================================================

# HTTP server port for receiving attestations from warden
SUBMITTER_HTTP_PORT=3004

# Enable/disable attestation submission
SUBMITTER_ENABLE_ATTESTATIONS=true

# Maximum attestations to submit per extrinsic
SUBMITTER_ATTESTATION_BATCH_SIZE=100

# Log attestations instead of submitting (use until pallet extrinsic is ready)
SUBMITTER_ATTESTATION_DRY_RUN=false

# API key for warden authentication (must match warden's ARION_API_KEY)
# WARNING: Change this to a secure value in production!
ARION_API_KEY=Hippius-Arion-Dev-01
